・news_list_original
id SERIAL NOT NULL,
site_id int,
country int,
date TIMESTAMP,
url text,
genre varchar(255),
title text,
text text,
created_at TIMESTAMP default CURRENT_TIMESTAMP not null,
updated_at TIMESTAMP default CURRENT_TIMESTAMP not null


drop table news_list_original;
create table news_list_original (
  id SERIAL NOT NULL,
  site_id int,
  country int,
  date TIMESTAMP,
  url text,
  genre varchar(255),
  title text,
  text text,
  created_at TIMESTAMP,
  updated_at TIMESTAMP,
  PRIMARY KEY ( id, url )
);

drop table news_list_translate;
create table news_list_translate (
  id SERIAL NOT NULL,
  original_id int NOT NULL,
  site_id int,
  country int,
  date TIMESTAMP,
  url text,
  genre varchar(255),
  title text,
  text text,
  created_at TIMESTAMP,
  updated_at TIMESTAMP,
  PRIMARY KEY ( id, url )
);

